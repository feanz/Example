<ul>
    @{
        ViewBag.Title = "Tests";
    }
    

    @{
        var controller = ViewContext.Controller.GetType();
        var methods = controller.GetMethods()
            .Where(m => m.ReturnType.ToString() == "System.Web.Mvc.ActionResult");

        foreach (var method in methods.Where(method => method.Name != "Index"))
        {
            <li>@Html.ActionLink(@method.Name, @method.Name, "Test")</li>
        }
    }
</ul>